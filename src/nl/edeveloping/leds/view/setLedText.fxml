<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

      <TabPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" tabClosingPolicy="UNAVAILABLE" fx:controller="nl.edeveloping.leds.controller.SetLedController">

        <tabs>
          <Tab text="Set Led">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="300.0">
                  <padding>
                      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                  </padding>
                     <children>
                      <Button fx:id="setLED" layoutX="150" layoutY="250" mnemonicParsing="false" onAction="#changeLed" text="Set LED" />
                      <TextField fx:id="tfPos" promptText="Position" layoutX="20" layoutY="20" />

                      <TextField fx:id="tfRed" promptText="Red" layoutX="20" layoutY="80" />
                      <TextField fx:id="tfGreen" promptText="Green" layoutX="20" layoutY="140" />
                      <TextField fx:id="tfBlue" promptText="Blue" layoutX="20" layoutY="200"/>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Animations">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="300.0" >
                  <padding>
                      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                  </padding>
              </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
